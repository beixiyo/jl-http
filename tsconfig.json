{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./dist/typings",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ]
}