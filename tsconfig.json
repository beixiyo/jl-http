{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "emitDeclarationOnly": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
        },
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "./dist/typings",
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
    ]
}